@{
    ViewBag.Title = "Employee List";
    Layout = null; // Remove this line if you're using a shared layout
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Employee List</title>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Employees</h2>
        <table id="employeeTable" class="display">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Last Name</th>
                    <th>Department</th>
                   
                </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            $('#employeeTable').DataTable({
                "ajax": {
                    "url": "/Employee/GetAll",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Id" },
                    { "data": "FirstName" },
                    { "data": "MiddleName" },
                    { "data": "LastName" },
                    { "data": "Department" }
                ]
            });
        });
    </script>
</body>
</html>
